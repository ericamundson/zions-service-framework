{{$app := .AppName | kebabcase}}
apiVersion: xl-deploy/v1
kind: Applications
spec:
- name: Applications/DTS
  type: core.Directory
  children:
  - name: {{$app}}
    type: udm.Application
    children:
    - name: !value "app_version"
      type: udm.DeploymentPackage
      deployables:
      {{if .UseQueue}}
      - name: {{$app}}-queuing.service
        type: file.File
        scanPlaceholders: true
        targetPath: '[[deploy.path]]'
        createTargetPath: "true"
        file: !file "../service/queue.service"
      - name: zions-queuing-microservice-hold.jar
        type: file.File
        scanPlaceholders: false
        targetPath: '[[deploy.path]]'
        createTargetPath: "true"
        file: !file "../../../zions-queuing-microservice/build/libs/zions-queuing-microservice.jar"
      - name: run queuing install
        type: advcmd.Command
        command: |-
          systemctl stop {{$app}}-queuing.service
          cp -f {{$app}}-queuing.service /etc/systemd/system
          cp -f [[deploy.path]]/{{$app}}-hold.jar [[deploy.path]]/{{$app}}.jar
          systemctl daemon-reload
          systemctl start {{$app}}-queuing.service          
        createOrder: "61"
        destroyOrder: "41"
        alwaysRun: "true"
        noopOrder: "61"
        undoCommand: 'echo "No action needed for undoCommand"'
      {{end}}
      - name: {{$app}}.service
        type: file.File
        scanPlaceholders: true
        targetPath: '[[deploy.path]]'
        createTargetPath: "true"
        file: !file "../service/microservice.service"
      - name: {{$app}}-hold.jar
        type: file.File
        scanPlaceholders: false
        targetPath: '[[deploy.path]]'
        createTargetPath: "true"
        file: !file "../../build/libs/{{$app}}.jar"
      - name: run install
        type: advcmd.Command
        command: |-
          systemctl stop {{$app}}.service
          cp -f {{$app}}.service /etc/systemd/system
          cp -f [[deploy.path]]/{{$app}}-hold.jar [[deploy.path]]/{{$app}}.jar
          systemctl daemon-reload
          systemctl start {{$app}}.service          
        createOrder: "62"
        destroyOrder: "42"
        alwaysRun: "true"
        noopOrder: "62"
        undoCommand: 'echo "No action needed for undoCommand"'
        
        
