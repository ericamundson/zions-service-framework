<service>
      <id>zions-pipeline-execution-microservice</id>
      <name>zions-pipeline-execution-microservice</name>
      <description>This service runs zions-pipeline-execution-microservice.</description>
      <executable>java</executable>
      
      <arguments>-Xrs -Xmx256m -jar "{{deploy.path}}/zions-pipeline-execution-microservice.jar" --queue.name=GIT-pipelineexecution-queue  --ado.topics=git.push --tfs.url={{tfs.url}} --logging.file="{{deploy.path}}/zions-pipeline-execution-microservice.log" </arguments>
	  
      <logmode>rotate</logmode>
      <logpath>{{deploy.path}}\wrapper-logs\zions-pipeline-execution-microservice</logpath>
</service>