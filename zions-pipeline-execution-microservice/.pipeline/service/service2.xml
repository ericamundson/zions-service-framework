<service>
      <id>zions-pipeline-execution-microservice2</id>
      <name>zions-pipeline-execution-microservice2</name>
      <description>This service runs zions-pipeline-execution-microservice2.</description>
      <executable>java</executable>
      
      <arguments>-Xrs -Xmx256m -jar -Dspring.profiles.active={{spring.profile}} "{{deploy.path}}/zions-pipeline-execution-microservice.jar" --queue.name=GIT-pipelineexecution-queue  --ado.topics=git.pullrequest.merged --tfs.url={{tfs.url}} --logging.file="{{deploy.path}}/zions-pipeline-execution-microservice2.log" </arguments>
	  
      <logmode>rotate</logmode>
      <logpath>{{deploy.path}}\wrapper-logs\zions-pipeline-execution-microservice2</logpath>
</service>