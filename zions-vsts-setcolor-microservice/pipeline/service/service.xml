<service>
      <id>zions-vsts-setcolor-microservice</id>
      <name>zions-vsts-setcolor-microservice</name>
      <description>This service runs zions-vsts-setcolor-microservice.</description>
      <executable>java</executable>
      
      <arguments>-Xrs -Xmx256m -jar "{{deploy.path}}/zions-vsts-setcolor-microservice.jar" --routing.exchange.name=WorkItem-exchange --queue.name=WorkItem-setcolor-queue --routing.direct.key=setcolor --tfs.url={{tfs.url}} --logging.file="{{deploy.path}}/zions-vsts-setcolor-microservice.log" </arguments>
      
      <logmode>rotate</logmode>
</service>