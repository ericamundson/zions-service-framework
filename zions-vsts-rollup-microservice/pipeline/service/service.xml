<service>
      <id>zions-vsts-rollup-microservice</id>
      <name>zions-vsts-rollup-microservice</name>
      <description>This service runs zions-vsts-rollup-microservice.</description>
      <executable>java</executable>
      
      <arguments>-Xrs -Xmx256m -jar "{{deploy.path}}/zions-vsts-rollup-microservice.jar" --queue.name=WorkItem-rollup-queue  --ado.topics=workitem.updated --tfs.url={{tfs.url}} --logging.file="{{deploy.path}}/zions-vsts-rollup-microservice.log" </arguments>
	  
      <logmode>rotate</logmode>
      <logpath>{{deploy.path}}\wrapper-logs\zions-vsts-rollup-microservice</logpath>
</service>